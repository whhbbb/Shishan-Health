page {
  width: 100%;
  height: 100%;
}
.wrapper {
  width: 100%;
  padding: 25rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.wrapper .theme {
  font-size: large;
  width: 88%;
}
.wrapper .line {
  width: 100%;
  height: 1px;
  background-color: #e5e5e5;
  margin: 25rpx auto;
}
.wrapper .detail {
  height: 72vh;
  overflow: scroll;
  width: 88%;
}
.wrapper .detail .desc {
  width: 100%;
}
.wrapper .recommend {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  z-index: 1000;
  width: 88%;
}
.wrapper .recommend .btn {
  width: 50%;
  height: 100rpx;
  background-color: rgb(214, 243, 251);
  color: #0077b6;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
}