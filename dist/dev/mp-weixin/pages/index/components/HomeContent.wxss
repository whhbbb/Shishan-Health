.main {
  width: 100%;
  height: 800rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}
.main .tools {
  height: 350rpx;
  width: 90%;
  display: flex;
  justify-content: space-between;
}
.main .tools .tools-item {
  width: 45%;
  height: 100%;
  background-color: rgb(222, 232, 194);
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.main .tools .tools-item image {
  width: 40%;
  height: 40%;
  margin-bottom: 20rpx;
}
.main .tools .tools-item .content {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.main .tools .tools-item .content .title {
  font-size: 35rpx;
  font-weight: bold;
  color: #333;
}
.main .tools .tools-item .content .intro {
  font-size: 25rpx;
  color: #9c9b9b;
}
.other {
  margin: 30rpx auto;
  height: 400rpx;
  width: 90%;
  background-color: rgb(222, 232, 194);
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
}