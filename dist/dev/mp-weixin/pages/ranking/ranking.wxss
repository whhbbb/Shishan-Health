.main {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.main .top {
  width: 90%;
  position: relative;
  display: flex;
  justify-content: center;
}
.main .top .chosebox {
  position: absolute;
  width: 35%;
  height: 50rpx;
  background-color: #a42929;
  top: 10rpx;
  left: 0;
}
.main .middle {
  width: 90%;
}
.main .middle .head {
  display: flex;
  justify-content: center;
}
.main .middle .sub-head {
  display: flex;
  justify-content: space-between;
}
.main .middle .item {
  position: relative;
  width: 300rpx;
}
.main .middle .item .avatar {
  position: absolute;
  top: 25rpx;
  left: 95rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}
.main .middle .item .content {
  position: absolute;
  top: 150rpx;
  left: 60rpx;
}
.main .middle .first .avatar {
  left: 100rpx;
}
.main .bottom {
  width: 80%;
  margin-bottom: 30rpx;
}
.main .bottom .items {
  padding: 20rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.main .bottom .items .index {
  width: 10%;
  font-weight: bold;
}
.main .bottom .items .item-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.main .bottom .items .item-username {
  flex: 1;
}