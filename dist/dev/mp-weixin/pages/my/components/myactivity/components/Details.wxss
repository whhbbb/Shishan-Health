.my-activity {
  width: 90%;
  margin: 0 auto;
}
.my-activity .activity-details-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  width: 100%;
  padding: 30rpx 0;
  border-bottom: 1px solid #d6d6d6;
}
.my-activity .activity-details-item .activity-details-item-title {
  font-size: 30rpx;
  font-weight: bolder;
  color: #333;
  font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS", sans-serif;
  margin-bottom: 20rpx;
  width: 100%;
}
.my-activity .activity-details-item .activity-details-item-title .title {
  width: 100%;
}
.my-activity .activity-details-item .activity-details-item-title .title .title-content {
  float: left;
  line-height: 50rpx;
}
.my-activity .activity-details-item .activity-details-item-title .title .activity-class {
  float: right;
  line-height: 50rpx;
}
.my-activity .activity-details-item .activity-details-item-contents {
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.my-activity .activity-details-item .activity-details-item-contents .activity-details-item-content {
  display: flex;
  justify-content: center;
  flex-direction: column;
  flex: 1;
}
.my-activity .activity-details-item .activity-details-item-contents .activity-details-item-content .sponsor {
  margin-bottom: 10rpx;
  font-size: 30rpx;
  color: black;
  margin-bottom: 20rpx;
}
.my-activity .activity-details-item .activity-details-item-contents .activity-details-item-content .activity-details-item-content-time {
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #767575;
}
.my-activity .activity-details-item .activity-details-item-contents .activity-details-item-content .activity-details-item-content-time .img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.my-activity .activity-details-item .activity-details-item-contents .activity-details-item-content .activity-details-item-content-address {
  font-size: 26rpx;
  color: #767575;
}
.my-activity .activity-details-item .activity-details-item-contents .activity-details-item-content .activity-details-item-content-address .img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.my-activity .activity-details-item .activity-details-item-contents .activity-details-item-status {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-around;
  width: 200rpx;
}
.my-activity .activity-details-item .activity-details-item-contents .activity-details-item-status .population {
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #666;
}
.my-activity .activity-details-item .activity-details-item-contents .activity-details-item-status .population .img {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}
.my-activity .activity-details-item .activity-details-item-contents .activity-details-item-status .status {
  font-size: 26rpx;
  color: #666;
}
