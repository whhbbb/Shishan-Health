page {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.viewport {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 95%;
}
.viewport .logo {
  margin-bottom: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.viewport .logo .title {
  font-size: 60rpx;
  color: #0077b6;
  margin-top: 20rpx;
}
.viewport .logo image {
  width: 220rpx;
  height: 220rpx;
  margin-top: 10vh;
}
.viewport .lowwer {
  margin-top: 150rpx;
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.viewport .lowwer .login-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-top: 20rpx;
}
.viewport .lowwer .login-content .input {
  width: 100%;
  margin-bottom: 30rpx;
}
.viewport .lowwer .login {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.viewport .lowwer .login .button {
  width: 100%;
  border-radius: 200rpx;
  background-color: rgb(214, 243, 251);
  color: #0077b6;
  margin-bottom: 10rpx;
}
.viewport .lowwer .login .rempass {
  font-size: 20rpx;
  display: flex;
  align-items: center;
}
 .is-input-border {
  border-radius: 200rpx !important;
  border: 1px solid rgb(13, 152, 232) !important;
}
 .uni-easyinput__content-input {
  padding-left: 40rpx !important;
  height: 90rpx !important;
  font-size: 30rpx !important;
}