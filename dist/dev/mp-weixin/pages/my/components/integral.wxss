.aboutUs {
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}
.aboutUs .img {
  width: 100%;
  text-align: center;
  margin-top: 60rpx;
}
.aboutUs .content {
  margin-top: 40rpx;
  line-height: 1.5;
  text-align: center;
  color: rgb(74, 73, 73);
}
.separate {
  height: 20rpx;
  background-color: whitesmoke;
  margin: 10rpx 0;
  width: 100%;
}
.title {
  font-size: 40rpx;
  font-family: Cambria, Cochin, Georgia, Times, "Times New Roman", serif;
  color: black;
  text-align: justify;
  font-weight: bold;
  text-shadow: #558abb 1px 0 20rpx;
}
.myCredit {
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 200rpx;
}
.myC {
  line-height: 200rpx;
}
.creditNum {
  font-size: 50rpx;
  text-shadow: 2rpx 2rpx 4rpx #558abb, 0 0 1em #558abb, 0 0 0.2em #558abb;
}