.container {
  display: flex;
  flex-direction: column;
}
.detail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 82%;
  margin: 0 auto;
  flex: 1;
  padding-bottom: 174rpx;
  overflow: hidden;
}
.detail .img-wrapper {
  margin-top: 20rpx;
  width: 100%;
  height: 70vh;
  background-color: #6b6a6a;
  border-radius: 15rpx;
}
.detail .img-wrapper .img {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.detail .top {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-top: 35rpx;
  margin-bottom: 15rpx;
}
.detail .top .detail-title {
  font-size: 38rpx;
}
.detail .top .detail-content {
  display: flex;
  justify-content: space-between;
  margin: 0 10rpx 10rpx 10rpx;
}
.detail .top .detail-content .status {
  font-size: 30rpx;
  color: #ff0000;
}
.detail .top .detail-content .status .img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.detail .top .detail-content .population {
  font-size: 30rpx;
  color: #000000;
}
.detail .top .detail-content .population .img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.detail .middle {
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-bottom: 60rpx;
}
.detail .middle .sponsor {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #000000;
}
.detail .middle .sponsor .img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.detail .middle .time {
  font-size: 30rpx;
  color: #000000;
  flex: 1;
  display: flex;
  align-items: center;
}
.detail .middle .time .img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.detail .middle .address {
  font-size: 30rpx;
  color: #000000;
  flex: 1;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #d6d6d6;
}
.detail .middle .address .img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.detail .bottom {
  flex: 1;
}
.detail .bottom .sponsor-intro {
  margin-bottom: 80rpx;
}
.detail .bottom .sponsor-intro .title {
  font-size: 30rpx;
  color: grey;
  margin-bottom: 10rpx;
}
.detail .bottom .sponsor-intro .intro {
  font-size: 30rpx;
  color: #000000;
}
.detail .bottom .activity-intro .title {
  font-size: 30rpx;
  color: grey;
  margin-bottom: 10rpx;
}
.detail .bottom .activity-intro .intro {
  font-size: 30rpx;
  color: #000000;
}
.footer {
  height: 150rpx;
  color: #0077B6;
  font-size: 26rpx;
  padding: 30rpx 0 30rpx 0;
  justify-content: space-evenly;
  position: fixed;
  bottom: 0;
  box-shadow: 0px -0.5px 0.5rpx #E7E8E9;
  background-color: #F5F6F7;
  width: 100%;
}
.footer .footer-inner {
  margin: 0 auto;
  width: 82%;
  display: flex;
  justify-content: space-between;
}
.footer .footer-inner .footer-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 40%;
}
.footer .footer-inner .footer-info .start {
  font-size: 20rpx;
}
.footer .footer-inner .activity-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 60%;
}
.footer .footer-inner .activity-btn .btn {
  width: 100%;
  height: 90rpx;
  color: #0077B6;
  border-radius: 40rpx;
  background-color: hsla(194, 84%, 51%, 0.15);
  font-size: 35rpx;
  font-weight: bold;
}
.footer .footer-inner .activity-btn .btn-active {
  width: 100%;
  height: 90rpx;
  color: #666666;
  border-radius: 40rpx;
  background-color: #d9d9d9;
  font-size: 35rpx;
  font-weight: bold;
}
.code-view {
  margin: 20rpx auto;
  padding-bottom: 30rpx;
}