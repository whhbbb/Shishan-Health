.order-list {
  width: 100%;
  margin: 0 auto;
  padding: 50rpx;
}
.order-list .order-item {
  display: flex;
  flex-direction: column;
  padding: 15rpx;
  padding-bottom: 30rpx;
  margin-bottom: 2vh;
  border-bottom: 1px solid #f0f0f0;
}
.order-list .order-item .inner-top {
  display: flex;
}
.order-list .order-item .inner-top .order-image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 15rpx;
  border-radius: 15rpx;
}
.order-list .order-item .inner-top .order-content1 {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.order-list .order-item .inner-top .order-content1 .order-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.order-list .order-item .inner-top .order-content1 .order-time {
  font-size: 24rpx;
  color: #666;
}
.order-list .order-item .inner-top .order-content2 {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-items: flex-end;
}
.order-list .order-item .inner-top .order-content2 .order-amount {
  display: flex;
  align-items: center;
  font-size: 35rpx;
  font-weight: bold;
}
.order-list .order-item .inner-top .order-content2 .order-amount .order-content-image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}
.order-list .order-item .inner-top .order-content2 .order-time {
  font-size: 24rpx;
  color: #666;
}
.order-list .order-item .inner-bottom {
  margin-top: 15rpx;
  padding: 10rpx;
  background-color: rgb(243, 245, 246);
  border-radius: 8rpx;
  font-size: 26rpx;
}
.order-list .order-item .inner-bottom .order-status {
  display: flex;
  align-items: center;
}
.order-list .order-item .inner-bottom .order-status .status-img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}