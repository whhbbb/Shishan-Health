page {
  height: 100%;
}
.viewport {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 20rpx 40rpx;
}
.viewport .login-content {
  width: 80%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-top: 20rpx;
}
.viewport .login-content .input {
  width: 100%;
}
.logo {
  flex: 1;
  text-align: center;
  margin-bottom: 60rpx;
}
.logo image {
  width: 220rpx;
  height: 220rpx;
  margin-top: 10vh;
}
.login {
  width: 90%;
  display: flex;
  flex-direction: column;
  height: 60vh;
  padding: 40rpx 20rpx 20rpx;
}
.login .button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  border-radius: 72rpx;
  color: #fff;
}
.login .button .icon {
  font-size: 40rpx;
  margin-right: 6rpx;
}
.login .rempass {
  display: block;
  margin: 20rpx auto;
  font-size: 24rpx;
  color: #444;
}
.login .phone {
  background-color: #06afe3;
}
.login .wechat {
  background-color: #06c05f;
}
.login .wechat .options {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 70rpx;
}
.login .wechat .options button {
  padding: 0;
  background-color: transparent;
}
.login .wechat .icon {
  font-size: 24rpx;
  color: #444;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.login .wechat .icon::before {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 6rpx;
  font-size: 40rpx;
  border: 1rpx solid #444;
  border-radius: 50%;
}
.login .wechat .icon-weixin::before {
  border-color: #06c05f;
  color: #06c05f;
}
.tips {
  position: absolute;
  bottom: 80rpx;
  left: 20rpx;
  right: 20rpx;
  font-size: 23rpx;
  color: #999;
  text-align: center;
}
.signUp-tip-txt-protocol {
  color: red;
}
.animation-shake {
  animation-delay: 0s;
  animation-duration: 0.1s;
  animation-iteration-count: infinite;
  animation-name: shake;
  animation-play-state: running;
  animation-timing-function: ease-in-out;
}
