.feedback {
  overflow-y: scroll;
  width: 90%;
  margin: 0 auto;
}
.feedback .feedback-item {
  width: 100%;
  height: 100%;
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.feedback .feedback-item .feedback-content {
  width: 100%;
  height: 95%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.feedback .feedback-item .feedback-content .feedback-content-item {
  margin-top: 5%;
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.feedback .feedback-item .feedback-content .feedback-content-item .feedback-content-item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #5d5c5c;
  margin-bottom: 20rpx;
}
.feedback .feedback-item .feedback-content .feedback-content-item .feedback-content-item-input {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.feedback .feedback-item .feedback-content .feedback-content-item .feedback-content-item-input textarea {
  width: 100%;
  height: 200rpx;
  border: 1px solid #eee;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #5d5c5c;
  resize: none;
}
.feedback .feedback-item .feedback-content .feedback-content-item .feedback-content-item-input .feedback-content-item-input-img {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.feedback .feedback-item .feedback-content .feedback-content-item .feedback-content-item-input .feedback-content-item-input-img image {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #eee;
  border-radius: 10rpx;
}
.feedback .feedback-item .feedback-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  margin-bottom: 30rpx;
}
.feedback .feedback-item .feedback-btn .btn {
  margin-top: 70rpx;
  width: 40%;
  font-size: 35rpx;
}