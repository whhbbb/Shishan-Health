.main {
  margin-top: 70rpx;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
}
.main .sport-content {
  display: flex;
  justify-content: space-between;
}
.main .sport-content .step-num {
  width: 300rpx;
  height: 300rpx;
  background-image: linear-gradient(to right, #e5f9f2, #f7faf9);
  border-radius: 20rpx;
  border: 1px solid #fff;
  margin-right: 30rpx;
}
.main .sport-content .main-content {
  flex: 1;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.main .sport-content .main-content .other-content {
  display: flex;
  justify-content: space-between;
}
.main .sport-content .main-content .other-content .item {
  width: 170rpx;
  height: 140rpx;
  background-image: linear-gradient(to right, #e5f9f2, #f7faf9);
  border-radius: 20rpx;
}
.main .sport-content .main-content .exercise-prescription {
  height: 140rpx;
  background-image: linear-gradient(to right, #e5f9f2, #f7faf9);
  border-radius: 20rpx;
}
.main .search {
  height: 100rpx;
  background-color: rgb(190, 188, 188);
  border-radius: 20rpx;
  margin-top: 30rpx;
}
.main .recommend {
  height: 45vh;
  background-color: rgb(190, 188, 188);
  border-radius: 20rpx;
  margin-top: 30rpx;
}