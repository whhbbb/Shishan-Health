.detail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 90%;
  margin: 0 auto;
}
.detail .top {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.detail .top .detail-title {
  font-size: 44rpx;
  margin: 10rpx 0 0 10rpx;
  margin-bottom: 15rpx;
}
.detail .top .detail-content {
  display: flex;
  justify-content: space-between;
  margin: 0 10rpx 10rpx 10rpx;
}
.detail .top .detail-content .status {
  font-size: 30rpx;
  color: #ff0000;
}
.detail .top .detail-content .status .img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.detail .top .detail-content .population {
  font-size: 30rpx;
  color: #000000;
}
.detail .top .detail-content .population .img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.detail .middle {
  height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-bottom: 60rpx;
}
.detail .middle .sponsor {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #000000;
  border-bottom: 1px solid #d6d6d6;
}
.detail .middle .time {
  font-size: 30rpx;
  color: #000000;
  flex: 1;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #d6d6d6;
}
.detail .middle .time .img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.detail .middle .address {
  font-size: 30rpx;
  color: #000000;
  flex: 1;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #d6d6d6;
}
.detail .middle .address .img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.detail .bottom {
  flex: 1;
}
.detail .bottom .sponsor-intro {
  margin-bottom: 80rpx;
}
.detail .bottom .sponsor-intro .title {
  font-size: 30rpx;
  color: grey;
  margin-bottom: 10rpx;
}
.detail .bottom .sponsor-intro .intro {
  font-size: 30rpx;
  color: #000000;
}
.detail .bottom .activity-intro .title {
  font-size: 30rpx;
  color: grey;
  margin-bottom: 10rpx;
}
.detail .bottom .activity-intro .intro {
  font-size: 30rpx;
  color: #000000;
}
.detail .footer .activity-btn {
  margin-bottom: 45rpx;
  display: flex;
  justify-content: center;
}
.detail .footer .activity-btn .btn {
  width: 40%;
  margin-top: 50rpx;
  font-size: 38rpx;
}
.detail .footer .activity-btn .hhh {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-content: center;
}
.detail .footer .activity-btn .hhh .hhh-btn {
  width: 40%;
  margin-bottom: 10rpx;
}
.detail .footer .activity-btn .hhh .span {
  text-align: center;
  color: #6b6a6a;
  font-size: 15px;
}
