
.tip-page {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.icons {
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  border-radius: 50%;
}
.message {
  margin-top: 1vh;
  font-size: 26px;
  font-weight: bold;
  color: #333;
}
