.share-item {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.item-header {
  display: flex;
  align-items: center;
}
.item-header .info {
  margin-left: 20rpx;
}
.item-header .info .name {
  font-weight: bold;
  font-size: 32rpx;
  color: #333;
}
.item-header .info .time {
  font-size: 26rpx;
  color: #777;
}
.item-content {
  margin-top: 30rpx;
}
.item-content .lable {
  color: #333;
  font-weight: bold;
  margin-right: 10rpx;
}
.item-content .text {
  font-size: 28rpx;
  color: #333;
}
.item-img {
  margin-top: 20rpx;
  min-height: 300rpx;
}
.content-img {
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
}
.content-img:only-child {
  width: 400rpx;
  height: 400rpx;
  margin-top: 20rpx;
}
.content-img:first-child:nth-last-child(2),
.content-img:nth-child(2):nth-last-child(1),
.content-img:first-child:nth-last-child(4),
.content-img:nth-child(3):nth-last-child(2),
.content-img:nth-child(2):nth-last-child(3),
.content-img:nth-child(4):nth-last-child(1) {
  width: 280rpx;
  height: 280rpx;
}
.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 40rpx;
  margin-top: 30rpx;
}
.item-footer .views {
  font-size: 26rpx;
  color: #777;
}
.item-footer image {
  margin-left: 30rpx;
}
.item-comments {
  margin-top: 20rpx;
}
.item-comments .comment-item {
  display: flex;
  align-items: center;
}
.item-comments .comment-item .name {
  font-weight: bold;
  font-size: 28rpx;
  color: #333;
}
.item-comments .comment-item .text {
  font-size: 26rpx;
  color: #333;
  margin-left: 10rpx;
}
.post-comment {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 5rpx;
}
.post-comment .comment-input {
  margin-top: 20rpx;
  height: 60rpx;
  width: 78%;
  padding: 0rpx 30rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  background-color: #eee;
  color: #333;
}
.post-comment .comment-comfirm {
  margin-top: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  width: 120rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  background-color: #55B89A;
  color: #fff;
}