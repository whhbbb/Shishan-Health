.wrapper {
  width: 85%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  padding-top: 50rpx;
}
.wrapper .credit-sum {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 60rpx;
  width: 100%;
  height: 160rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 20px #e5e4e4;
}
.wrapper .credit-sum .credit-sum-content {
  display: flex;
  align-items: center;
}
.wrapper .credit-sum .credit-sum-content .credit-num {
  font-size: 55rpx;
  font-weight: bold;
  margin-right: 10rpx;
}
.wrapper .credit-sum .credit-role {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 30rpx;
}
.wrapper .credit-sum .credit-role .credit-role-img {
  height: 25rpx;
  margin-left: 8rpx;
}
.wrapper .credit-details {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  margin-top: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 20px #e5e4e4;
  min-height: 100rpx;
}
.wrapper .credit-details .month-details {
  display: flex;
  flex-direction: column;
}
.wrapper .credit-details .month-details .month {
  font-size: 35rpx;
  padding-bottom: 20rpx;
  border-bottom: 1.5px solid #e5e4e4;
  margin-bottom: 20rpx;
}
.wrapper .credit-details .month-details .history-details {
  display: flex;
  padding: 0 30rpx;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.wrapper .credit-details .month-details .history-details .history-content {
  display: flex;
  flex-direction: column;
}
.wrapper .credit-details .month-details .history-details .history-content .history-title {
  font-size: 32rpx;
  color: #333;
}
.wrapper .credit-details .month-details .history-details .history-content .history-time {
  font-size: 25rpx;
  color: #999;
}
.wrapper .credit-details .month-details .history-details .history-credit {
  display: flex;
  align-items: center;
  font-size: 38rpx;
  color: #000;
}